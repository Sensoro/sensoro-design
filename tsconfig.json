{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noErrorTruncation": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "paths": {
      "@sensoro/sensoro-design": ["src/index.ts"],
      "@sensoro/sensoro-design/es/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "jest",
    "example",
    "_test_",
    "**/demo/*"
  ]
}
